{
	"name": "railfix",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun --hot run src/index.ts",
		"railway:codegen": "genql --endpoint https://backboard.railway.com/graphql/v2 --output ./src/lib/railway/generated",
		"opencode:dev": "opencode serve --port 4096 --hostname localhost",
		"dev:all": "concurrently \"bun run dev\" \"bun run opencode:dev\""
	},
	"dependencies": {
		"@ai-sdk/openai": "^2.0.65",
		"@opencode-ai/sdk": "^1.0.65",
		"ai": "^5.0.93",
		"bullmq": "^5.63.2",
		"graphql": "^16.12.0",
		"ioredis": "^5.8.2",
		"opencode-ai": "^1.0.78",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@genql/cli": "^6.3.3",
		"@types/bun": "latest",
		"concurrently": "^9.2.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
